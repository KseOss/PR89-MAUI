2. –û–±–Ω–æ–≤–∏–º UserProfilePage.xaml.cs:

```csharp
using Microsoft.Maui.Controls;
using PR8_MAUI.Models;

namespace PR8_MAUI
{
    public partial class UserProfilePage : ContentPage
    {
        private Student currentStudent;

        public UserProfilePage()
        {
            InitializeComponent();
            LoadUserData();
            UpdateStudentInfo();
        }

        private void LoadUserData()
        {
            UserNameLabel.Text = AppData.UserName;
            UserEmailLabel.Text = AppData.UserEmail;
            UserPhoneLabel.Text = AppData.UserPhone;
        }

        private void UpdateStudentInfo()
        {
            // –ë–µ—Ä–µ–º –ø–µ—Ä–≤–æ–≥–æ —Å—Ç—É–¥–µ–Ω—Ç–∞ –∏–∑ —Å–ø–∏—Å–∫–∞ –∏–ª–∏ null
            currentStudent = StudentService.Students.Count > 0 ? StudentService.Students[0] : null;
            
            if (currentStudent != null)
            {
                StudentNameLabel.Text = currentStudent.FullName;
                StudentAgeLabel.Text = currentStudent.AgeInfo;
                StudentGradesLabel.Text = currentStudent.GradesInfo;
                EditButton.IsEnabled = true;
                EditButton.Text = $"–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å: {currentStudent.LastName}";
            }
            else
            {
                StudentNameLabel.Text = "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –æ —Å—Ç—É–¥–µ–Ω—Ç–µ";
                StudentAgeLabel.Text = "–î–æ–±–∞–≤—å—Ç–µ –ø–µ—Ä–≤–æ–≥–æ —Å—Ç—É–¥–µ–Ω—Ç–∞";
                StudentGradesLabel.Text = "";
                EditButton.IsEnabled = false;
                EditButton.Text = "–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å –¥–∞–Ω–Ω—ã–µ —Å—Ç—É–¥–µ–Ω—Ç–∞";
            }
        }

        private async void OnAddStudentClicked(object sender, EventArgs e)
        {
            // –ü–µ—Ä–µ—Ö–æ–¥–∏–º –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Å—Ç—É–¥–µ–Ω—Ç–∞ (MainPage –∏–∑ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è ‚Ññ9)
            await Navigation.PushAsync(new MainPage());
        }

        private async void OnEditStudentClicked(object sender, EventArgs e)
        {
            if (currentStudent != null)
            {
                await Navigation.PushAsync(new EditStudentPage(currentStudent));
            }
            else
            {
                await DisplayAlert("–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è", "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –¥–ª—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è. –î–æ–±–∞–≤—å—Ç–µ —Å—Ç—É–¥–µ–Ω—Ç–∞ —Å–Ω–∞—á–∞–ª–∞.", "OK");
            }
        }

        private async void OnViewStudentsClicked(object sender, EventArgs e)
        {
            await Navigation.PushAsync(new StudentListPage());
        }

        private async void OnLogoutClicked(object sender, EventArgs e)
        {
            bool confirm = await DisplayAlert("–í—ã—Ö–æ–¥", 
                "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ –≤—ã–π—Ç–∏?", 
                "–î–∞", "–ù–µ—Ç");
            
            if (confirm)
            {
                // –í–æ–∑–≤—Ä–∞—â–∞–µ–º—Å—è –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É –ª–æ–≥–∏–Ω–∞
                await Navigation.PushAsync(new LoginPage());
                
                // –û—á–∏—â–∞–µ–º —Å—Ç–µ–∫ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
                var existingPages = Navigation.NavigationStack.ToList();
                foreach (var page in existingPages)
                {
                    if (page != existingPages.Last())
                        Navigation.RemovePage(page);
                }
            }
        }

        protected override void OnAppearing()
        {
            base.OnAppearing();
            // –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—é –ø—Ä–∏ –≤–æ–∑–≤—Ä–∞—â–µ–Ω–∏–∏ –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É
            UpdateStudentInfo();
        }
    }
}
```

3. –û–±–Ω–æ–≤–∏–º MainPage.xaml.cs - —á—Ç–æ–±—ã –ø–æ—Å–ª–µ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –≤–æ–∑–≤—Ä–∞—â–∞—Ç—å—Å—è –Ω–∞ UserProfilePage:

```csharp
private async void SaveStudent_Clicked(object sender, EventArgs e)
{
    if (string.IsNullOrWhiteSpace(lastName.Text) || string.IsNullOrWhiteSpace(firstName.Text))
    {
        await DisplayAlert("–û—à–∏–±–∫–∞", "–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –æ–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ –ø–æ–ª—è (–§–∞–º–∏–ª–∏—è –∏ –ò–º—è)", "OK");
        return;
    }

    var student = new Student
    {
        LastName = lastName.Text,
        FirstName = firstName.Text,
        MiddleName = middleName.Text,
        BirthDate = dateBirth.Date,
        Age = CalculateAge(dateBirth.Date),
        Gender = genderPicker.SelectedItem?.ToString() ?? "–ù–µ —É–∫–∞–∑–∞–Ω",
        NeedsDormitory = _needsDormitory,
        IsMonitor = _isMonitor,
        MathGrade = mathGrade.Text,
        ProgrammingGrade = programmingGrade.Text,
        EnglishGrade = englishGrade.Text,
        AdditionalInfo = additionalInfo.Text,
        Photo = studentPhoto.Source
    };

    StudentService.Students.Add(student);
    ClearForm();
    
    await DisplayAlert("–£—Å–ø–µ—Ö", $"–°—Ç—É–¥–µ–Ω—Ç {student.FullName} –¥–æ–±–∞–≤–ª–µ–Ω –≤ —Å–ø–∏—Å–æ–∫", "OK");
    
    // –í–º–µ—Å—Ç–æ –ø–µ—Ä–µ—Ö–æ–¥–∞ –∫ —Å–ø–∏—Å–∫—É —Å—Ç—É–¥–µ–Ω—Ç–æ–≤ –≤–æ–∑–≤—Ä–∞—â–∞–µ–º—Å—è –Ω–∞ –ø—Ä–æ—Ñ–∏–ª—å
    await Navigation.PopAsync();
}
```

4. –î–ª—è —É–¥–æ–±—Å—Ç–≤–∞ –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å TabBar –≤ UserProfilePage (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ):

