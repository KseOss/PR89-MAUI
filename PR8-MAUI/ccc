2. –û–±–Ω–æ–≤–∏–º UserProfilePage.xaml.cs - –∫–Ω–æ–ø–∫–∞ "–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å" –¥–æ–ª–∂–Ω–∞ –æ—Ç–∫—Ä—ã–≤–∞—Ç—å —Å—É—â–µ—Å—Ç–≤—É—é—â—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è EditStudentPage:

```csharp
using Microsoft.Maui.Controls;
using PR8_MAUI.Models;
using PR8_MAUI.Views;

namespace PR8_MAUI
{
    public partial class UserProfilePage : ContentPage
    {
        public UserProfilePage()
        {
            InitializeComponent();
            LoadUserData();
        }

        private void LoadUserData()
        {
            UserNameLabel.Text = AppData.UserName;
            UserEmailLabel.Text = AppData.UserEmail;
            UserPhoneLabel.Text = AppData.UserPhone;
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –ø–µ—Ä–≤–æ–≥–æ —Å—Ç—É–¥–µ–Ω—Ç–∞ –∏–∑ —Å–ø–∏—Å–∫–∞ –∫–∞–∫ –ø—Ä–∏–º–µ—Ä
            if (StudentService.Students.Count > 0)
            {
                var firstStudent = StudentService.Students[0];
                StudentNameLabel.Text = firstStudent.FullName;
                StudentAgeLabel.Text = firstStudent.AgeInfo;
                StudentGradesLabel.Text = firstStudent.GradesInfo;
            }
        }

        private async void OnEditProfileClicked(object sender, EventArgs e)
        {
            // –û—Ç–∫—Ä—ã–≤–∞–µ–º —Å—É—â–µ—Å—Ç–≤—É—é—â—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –∏–∑ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è ‚Ññ9
            if (StudentService.Students.Count > 0)
            {
                await Navigation.PushAsync(new EditStudentPage(StudentService.Students[0]));
            }
            else
            {
                await DisplayAlert("–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è", "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –¥–ª—è —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞–Ω–∏—è", "OK");
            }
        }

        private async void OnLogoutClicked(object sender, EventArgs e)
        {
            bool confirm = await DisplayAlert("–í—ã—Ö–æ–¥", 
                "–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ –≤—ã–π—Ç–∏?", 
                "–î–∞", "–ù–µ—Ç");
            
            if (confirm)
            {
                // –í–æ–∑–≤—Ä–∞—â–∞–µ–º—Å—è –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É –ª–æ–≥–∏–Ω–∞
                await Navigation.PushAsync(new LoginPage());
                
                // –û—á–∏—â–∞–µ–º —Å—Ç–µ–∫ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
                var existingPages = Navigation.NavigationStack.ToList();
                foreach (var page in existingPages)
                {
                    if (page != existingPages.Last())
                        Navigation.RemovePage(page);
                }
            }
        }
    }
}
```

