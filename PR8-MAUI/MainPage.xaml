<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PR8_MAUI.MainPage">

    <ScrollView>
        <StackLayout Padding="20">

            <Label Text="Добавление студента"
                   FontSize="20" FontAttributes="Bold"
                   HorizontalOptions="Center" Margin="0,0,0,20"/>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Фамилия:" FontAttributes="Bold"/>
                    <Entry x:Name="lastName" Placeholder="Введите фамилию"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Имя:" FontAttributes="Bold"/>
                    <Entry x:Name="firstName" Placeholder="Введите имя"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Отчество:" FontAttributes="Bold"/>
                    <Entry x:Name="middleName" Placeholder="Введите отчество"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Дата рождения:" FontAttributes="Bold"/>
                    <DatePicker x:Name="dateBirth" DateSelected="dateBirth_DateSelected"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Пол:" FontAttributes="Bold"/>
                    <Picker x:Name="genderPicker" Title="Выберите пол">
                        <Picker.Items>
                            <x:String>Мужской</x:String>
                            <x:String>Женский</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Проживание и должность:" FontAttributes="Bold"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Нужно общежитие:" VerticalOptions="Center"/>
                        <Switch x:Name="dormitorySwitch" Toggled="OnDormitoryToggled" />

                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="Является старостой:" VerticalOptions="Center"/>
                        <Switch x:Name="monitorSwitch" Toggled="OnMonitorToggled" />
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Оценки:" FontAttributes="Bold"/>
                    <StackLayout Orientation="Horizontal" Margin="0,5">
                        <Label Text="Математика:" VerticalOptions="Center"/>
                        <Label x:Name="mathGrade" Text="5" VerticalOptions="Center" Margin="10,0"/>
                        <Stepper x:Name="mathStepper" Minimum="2" Maximum="5" Increment="1" Value="5"
                                 ValueChanged="MathStepper_ValueChanged" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Margin="0,5">
                        <Label Text="Программирование:" VerticalOptions="Center"/>
                        <Label x:Name="programmingGrade" Text="5" VerticalOptions="Center" Margin="10,0"/>
                        <Stepper x:Name="programmingStepper" Minimum="2" Maximum="5" Increment="1" Value="5"
                                 ValueChanged="ProgrammingStepper_ValueChanged" HorizontalOptions="EndAndExpand"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Margin="0,5">
                        <Label Text="Английский:" VerticalOptions="Center"/>
                        <Label x:Name="englishGrade" Text="5.0" VerticalOptions="Center" Margin="10,0"/>
                        <Slider x:Name="englishSlider" Minimum="2" Maximum="5" Value="5"
                                ValueChanged="EnglishSlider_ValueChanged" HorizontalOptions="FillAndExpand"/>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Дополнительная информация:" FontAttributes="Bold"/>
                    <Editor x:Name="additionalInfo" Placeholder="Хобби, увлечения..." HeightRequest="100"/>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="#F0F0F0" Padding="15" Margin="0,0,0,10">
                <StackLayout>
                    <Label Text="Фото студента:" FontAttributes="Bold"/>
                    <Image x:Name="studentPhoto" HeightRequest="100" WidthRequest="100" Aspect="AspectFit"/>
                    <Button Text="Загрузить фото" Clicked="AddPhotoBtn_Clicked" Margin="0,10"/>
                </StackLayout>
            </Frame>

            <Label x:Name="age" Text="Возраст - 18" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,10"/>

            <Button Text="Сохранить студента" Clicked="SaveStudent_Clicked"
                    BackgroundColor="LightGreen" Margin="0,20" TextColor="Black" FontAttributes="Bold"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
